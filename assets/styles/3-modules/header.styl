header
  height 600px
  overflow hidden // added for pseudo-element
  position relative // added for pseudo-element


  &::before
    content ' '
    position fixed // instead of background-attachment
    width 100%
    height @height
    top 0
    left 0
    background-color pink
    background url(img/hero2.jpg) no-repeat center 20%
    background-size: cover
    will-change: transform // creates a new paint layer
    z-index: -1



.navbar
  background-color #231f20
  lost-utility clearfix

.logo
  float left
  margin-left 20px

  img
    background-color blue
    border none
    border-radius 50%
    height 20px
    margin-right 15px
    width @height



  h3
    color white
    display inline-block
    letter-spacing 1px
    line-height 64px
    margin 0
    text-transform uppercase

.navbar-links
  display flex
  float right
  justify-content flex-end

  li
    list-style none

    a
      color white
      padding 20px


    &:hover
      text-decoration underline

.lead
  color white
  text-align center

  h1
    font-size 100px
    margin-bottom 30px
    text-transform uppercase

  p
    font-family 'Fira Sans', sans-serif
    margin 0 auto
    max-width 500px

  .cta
    margin 30px auto 70px

