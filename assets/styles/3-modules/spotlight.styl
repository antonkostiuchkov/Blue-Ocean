.post
  lost-column 1/4
  background #fff
  box-sizing border-box
  border 1px solid #e1e1e1
  transition all 200ms ease-in-out
  height 450px
  margin-top 30px

  &:hover
    background-color rgba(blue, 0.3)
    color black

  +below(860px)
    lost-column 1/2

  +below(450px)
    lost-column 1/1


  img
    width 100%

  .info
    padding 0 20px 20px 20px

    h4
      font-family 'Fira Sans', sans-serif
      margin 20px auto 20px

    p
      font-size 15px

      span
        font-weight bold