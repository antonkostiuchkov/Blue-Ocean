section
  padding-bottom 80px
  background-color white
  overflow hidden

.content
  lost-center 980px

.dark
  background-color #ebebeb

.section-name
  font-family 'Fira Sans', sans-serif
  font-weight 400
  margin 60px auto
  text-align center


.posts
  display flex


  .post
    background #fff
    border 1px solid #e1e1e1
    lost-column 1/4
    transition all 200ms ease-in-out

    &:hover
      background-color rgba(blue, 0.3)
      color black

    img
      width 100%

    .info
      padding 0 20px 20px 20px

      h4
        font-family 'Fira Sans', sans-serif
        margin 20px auto 20px

      p
        font-size 15px

        span
          font-weight bold
